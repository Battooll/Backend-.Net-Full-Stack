
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Message</title>
</head>
<body>
    <h2>Message</h2>
    <h3>
        @TempData["Message"]
    </h3>

    <p> There are @TempData["CustomerCount"] customers, which are:</p>
    
    <table>
        <thead>Customer Management System</thead>
        <tbody>
            <tr>
                <th>Customer Id</th>
                <th> Customer Name</th>
                <th> Amount</th>
            </tr>
            @foreach (var item in TempData["CustomerList"] as List<Customer>)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.Name</td>
                    <td>@item.Amount</td>
                </tr>
            }
        </tbody>
    </table>
    @{
        TempData.Keep("Message");
    }
    <a asp-controller="Home" asp-action="Method1" >Go To </a>
</body>
</html>
