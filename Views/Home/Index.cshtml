@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <p>Learn about <a href="https://docs.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>
</div>

<h3>
    @ViewBag.Message
</h3>

<p> There are @ViewBag.CustomerCount customers, which are:</p>
<ul>
    @foreach(var item in @ViewBag.CustomerList){
    <li>@item.Id - @item.Name - @item.Amount</li>}
</ul>

<table>
    <thead>Customer Management System</thead>
    <tbody>
        <tr>
            <th>Customer Id</th>
            <th> Customer Name</th>
            <th> Amount</th>
        </tr>
        @foreach (var item in @ViewBag.CustomerList)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Name</td>
                <td>@item.Amount</td>
            </tr>
        }
    </tbody>
</table>
<hr/>

@Html.ActionLink("Details Page","Details","Home")
<br/>

<a asp-controller="Home" asp-action="Message">Message</a> 
