
@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Details</h1>

<h3>
    @ViewData["Message"]
</h3>

<p> There are @ViewData["CustomerCount"] customers, which are:</p>
<ul>
    @foreach (var item in @ViewData["CustomerList"] as List<Customer>)
    {
        <li>@item.Id - @item.Name - @item.Amount</li>
    }
</ul>

<table>
    <thead>Customer Management System</thead>
    <tbody>
        <tr>
            <th>Customer Id</th>
            <th> Customer Name</th>
            <th> Amount</th>
        </tr>
        @foreach (var item in @ViewData["CustomerList"] as List<Customer>)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Name</td>
                <td>@item.Amount</td>
            </tr>
        }
    </tbody>
</table>